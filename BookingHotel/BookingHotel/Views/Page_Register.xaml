<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BookingHotel.Models"
             x:Class="BookingHotel.Views.Page_Register"
             Title="Đăng ký">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" WidthRequest="300">
                <Label Text="Đăng ký" FontAttributes="Bold" FontSize="Large" TextColor="Black"
                   HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
                <Label Text="Email" TextColor="#585de4" FontSize="Large" FontAttributes="Bold" Margin="10,0,0,0"/>
                <Frame BackgroundColor="#f4f4f8" CornerRadius="20" HeightRequest="50" HasShadow="False" HorizontalOptions="FillAndExpand" BorderColor="#585de4" Padding="0">
                    <models:MyEntry  FontSize="Medium" TextColor="Black" Margin="10,0,0,0" />
                </Frame>
                <Label Text="Số điện thoại" TextColor="#585de4" FontSize="Large" FontAttributes="Bold" Margin="10,10,0,0"/>
                <Frame BackgroundColor="#f4f4f8" CornerRadius="20" HeightRequest="50" HasShadow="False" HorizontalOptions="FillAndExpand" BorderColor="#585de4" Padding="0">
                    <models:MyEntry FontSize="Medium" TextColor="Black" Margin="10,0,0,0" />
                </Frame>
                <Label Text="Mật khẩu" TextColor="#585de4" FontSize="Large" FontAttributes="Bold" Margin="10,10,0,0"/>
                <Frame BackgroundColor="#f4f4f8" CornerRadius="20" HeightRequest="50" HasShadow="False" HorizontalOptions="FillAndExpand" BorderColor="#585de4" Padding="0">
                    <models:MyEntry FontSize="Medium" IsPassword="True" TextColor="Black" Margin="10,0,0,0"/>
                </Frame>
                <Label Text="Nhập lại mật khẩu" TextColor="#585de4" FontSize="Large" FontAttributes="Bold" Margin="10,10,0,0"/>
                <Frame BackgroundColor="#f4f4f8" CornerRadius="20" HeightRequest="50" HasShadow="False" HorizontalOptions="FillAndExpand" BorderColor="#585de4" Padding="0">
                    <models:MyEntry FontSize="Medium" IsPassword="True" TextColor="Black" Margin="10,0,0,0"/>
                </Frame>
                <Button Text="Đăng ký" x:Name="Register_btn" Clicked="Register_btn_Clicked" Margin="0,30,0,0" HorizontalOptions="Center" Padding="20,10,20,10"
                        CornerRadius="30" BorderColor="#585de4" BackgroundColor="#585de4" TextColor="White" FontSize="Large" FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,20,0,20">
                <Label Text="Bạn đã có tài khoản?" FontSize="Medium" TextColor="Black"/>
                <Label Text="Đăng nhập!" FontSize="Medium" TextColor="#585de4" FontAttributes="Bold" >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer x:Name="login_btn" Tapped="login_btn_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>